<% active_table_for :message_templates_table, @tbl, :actions => [['Delete','delete','Delete the selected messaging templates?' ]] do |t| -%>
<tr <%= highlight_row 'message', t.id %>>
 <td><%= entry_checkbox 'message', t.id %></td>
 <td><%= link_to v(t.name),:action => 'edit',:path => [ t.id ] %></td>
 <td><%= h t.subject %></td>
 <td><%= h t.created_at.strftime(DEFAULT_DATETIME_FORMAT.t) %></td>
 <td><%= h t.updated_at.strftime(DEFAULT_DATETIME_FORMAT.t) %></td>
 <td><%= h t.category -%></td>
</tr>
<% end -%>
