<% if flash[:message_sent] %>
<div class='message_msg' style='text-align:center;'>
 Your message has been sent
</div>
<% end -%>
<div class='message_header'>
<table>
<tr>
  <td align='center'>
    <a href='javascript:void(0);' onclick='MessageViewer.writeMessage();'><img src='/components/message/images/write.gif'/></a><br/>
    <a href='javascript:void(0);' onclick='MessageViewer.writeMessage();'>New Message</a>
  </td>
  <td align='center' style='padding-left:10px;'>
    <a href='javascript:void(0);' onclick='MessageViewer.sentMessages();'><img src='/components/message/images/sent.gif'/></a><br/>
    <a href='javascript:void(0);' onclick='MessageViewer.sentMessages();'>Sent Messages</a>
  </td>
</tr>
    
</table>
</div>
<br/><br/>
<div align='left'>
  <% end_user_table_for tbl,
     :style => 'width:100%', :container_id => 'mailbox_details',
     :empty => 'You have no messages',
     :actions => [['Delete Messages','delete','Are you sure you want to delete the selected messages?']] do |t| -%>
  <tr <%= "class='unopened'" unless t.opened? -%> <%= tbl.highlight_row t %>>
    <td><%= tbl.entry_checkbox t %></td>
    <td></td>
    <td >
        <%= "<b>*" unless t.opened? %>
    <a href='javascript:void(0);' onclick='MessageViewer.viewMessage(<%= t.id %>);'><%= h(t.subject) %></a>
        <%= "</b>" unless t.opened? %>
    </td>
    <td><%= t.from_user ? h(t.from_user.name) : '-' %></td>
    <td><%= t.created_at.strftime(DEFAULT_DATETIME_FORMAT.t) %></td>
  </tr>
  <% end -%>
</div>
